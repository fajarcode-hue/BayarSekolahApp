<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAF5"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk Ke Aplikasi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan Tambahkan Informasi Anda Untuk Masuk"
        android:textSize="14sp"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true" />

    <!-- Tombol toggle Email dan Ponsel -->
    <LinearLayout
        android:id="@+id/llToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSubtitle"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:backgroundTint="#67AE6E"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button" />

        <Button
            android:id="@+id/btnPonsel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:backgroundTint="#FFFFFF"
            android:text="Ponsel"
            android:textColor="#000000"
            android:background="@drawable/rounded_button" />
    </LinearLayout>

    <!-- Kotak abu-abu berisi email dan password -->
    <LinearLayout
        android:id="@+id/llForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D3D3D3"
        android:padding="16dp"
        android:layout_below="@+id/llToggle"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:backgroundTintMode="src_over"
        android:backgroundTint="#D3D3D3"
        android:clipToOutline="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owiloversejati@gmail.com"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:autoLink="email"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="***************"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>
    </LinearLayout>

    <!-- Tombol Masuk -->
    <Button
        android:id="@+id/btnMasuk"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:text="Masuk"
        android:textColor="#FFFFFF"
        android:backgroundTint="#59946B"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/rounded_button" />

</RelativeLayout>
